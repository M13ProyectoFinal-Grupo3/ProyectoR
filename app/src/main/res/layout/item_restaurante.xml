        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:text="Nombre"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txARazonSocial"
        android:layout_width="wrap_content"
