<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Forms.FormCarta">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carta del restaurante"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tx_departamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del restaurante"
            android:textSize="28dp" />

        <ListView
            android:id="@+id/lista_prods"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_nuevoprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:text="NUEVO DEPARTAMENTO" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>